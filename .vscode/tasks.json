{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (make all)",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Build ELF only",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Generate HEX file",
            "type": "shell",
            "command": "make",
            "args": ["hex"],
            "dependsOn": "Build ELF only",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Show memory usage",
            "type": "shell",
            "command": "make",
            "args": ["size"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Debug (make DEBUG=1)",
            "type": "shell",
            "command": "make",
            "args": ["DEBUG=1", "all"],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Start MSPDebug GDB Server",
            "type": "shell",
            "command": "${workspaceFolder}/start-debug.sh",
            "isBackground": true,
            "dependsOn": "Build Debug (make DEBUG=1)",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "line": 0,
                    "column": 0,
                    "message": 0
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting MSPDebug GDB server.*",
                    "endsPattern": "^.*Bound to port 2000.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
