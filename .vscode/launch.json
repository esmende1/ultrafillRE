{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MSP430 Debug with MSP-FET430UIF",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/firmware-debug.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "msp430-elf-gdb",
            "miDebuggerServerAddress": "localhost:2000",
            "svdPath": "${workspaceFolder}/resources/MSP430F155.svd",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture to MSP430",
                    "text": "set architecture msp430",
                    "ignoreFailures": true
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "description": "Erase device memory",
                    "text": "mon erase all",
                    "ignoreFailures": true
                },
                {
                    "description": "Load program into device",
                    "text": "load",
                    "ignoreFailures": false
                },
                {
                    "description": "Reset device",
                    "text": "mon reset",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            },
            "preLaunchTask": "Start MSPDebug GDB Server",
        }
    ],
    "compounds": []
}
